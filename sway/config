set $mod Mod4                       # logo key
set $mod_alt Mod1                   # alt key

set $left h
set $down j
set $up k
set $right l

set $term kitty                     # terminal emulator
set $menu fuzzel                    # application launcher

output eDP-1 scale 1.2              # display settings

output * bg /usr/share/backgrounds/sway/Sway_Wallpaper_Blue_1920x1080.png fill  # wallpaper

exec systemd-inhibit --what=handle-power-key sleep infinity

exec swayidle -w \
    timeout 240 'swaylock -f -c 000000' \
    timeout 300 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
    before-sleep 'swaylock -f -c 000000'


bindsym $mod+Shift+c reload
bindsym $mod+Shift+e exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

default_border none
bindsym $mod+tab workspace next
bindsym $mod+Shift+tab workspace prev


bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*